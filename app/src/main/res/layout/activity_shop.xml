<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan"

    android:fitsSystemWindows="true"
    tools:context=".ShopActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/shop_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#80000000"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Shop"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Bal: "
                android:textSize="27sp" />

            <ImageView
                android:id="@+id/pokedollar"
                android:layout_width="18dp"
                android:layout_height="39dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/pokedollars" />

            <TextView
                android:id="@+id/balance"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="999"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center_vertical"
            android:onClick="shop_buy"
            android:orientation="horizontal"
            android:tag="1">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="78dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pokeball_1" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_weight="10"
                android:gravity="center_horizontal|center_vertical"
                android:text="PokÃ©ball"
                android:textSize="18dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:gravity="right"
                android:text="$200"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center_vertical"
            android:onClick="shop_buy"
            android:orientation="horizontal"
            android:tag="2">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="83dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/greatball_1" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="84dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="10"
                android:gravity="center_horizontal|center_vertical"
                android:text="Greatball"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/gbAmount"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:gravity="right"
                android:text="$500"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center_vertical"
            android:onClick="shop_buy"
            android:orientation="horizontal"
            android:tag="3">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="83dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ultraball_1" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="84dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="10"
                android:gravity="center_horizontal|center_vertical"
                android:text="Ultraball"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ubAmount"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:gravity="right"
                android:text="$1,500"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center_vertical"
            android:onClick="shop_buy"
            android:orientation="horizontal"
            android:tag="5">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="83dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/masterball_1" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="84dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="10"
                android:gravity="center_horizontal|center_vertical"
                android:text="Masterball"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/mbAmount"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:gravity="right"
                android:text="$100,000"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center_vertical"
            android:onClick="shop_buy"
            android:orientation="horizontal"
            android:tag="6">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/repel" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="84dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="10"
                android:gravity="center_horizontal|center_vertical"
                android:text="Repel"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/rAmount"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:gravity="right"
                android:text="$1,500"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center_vertical"
            android:onClick="shop_buy"
            android:orientation="horizontal"
            android:tag="7">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="57dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/amulet_coin" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="84dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="10"
                android:gravity="center_horizontal|center_vertical"
                android:text="Amulet Coin"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/acAmount"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:gravity="right"
                android:text="$999,999"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="shop_buy"
            android:orientation="horizontal"
            android:tag="8">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="83dp"
                android:layout_marginLeft="23dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shiny_charm" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="84dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="10"
                android:gravity="center_horizontal|center_vertical"
                android:text="Shiny Charm"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/scAmount"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:gravity="right"
                android:text="$999,999"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/lightcyan"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/orange"
        app:menu="@menu/nav_menu"
        tools:visibility="gone" />

</androidx.drawerlayout.widget.DrawerLayout>

